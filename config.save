{
  "modules-left": [
    "custom/logo",
    "sway/workspaces",
    "sway/scratchpad",
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "pulseaudio",
    "backlight",
    "memory",
    "cpu",
    "temperature",
    "network",
    "battery",
    "idle_inhibitor",
    "bluetooth"
//    "tray"
  ],
  "custom/logo": {
    "format": "\uf303 {}",
    "exec": "whoami",
  },
  "sway/workspaces": {
    "disable-scroll": true,
  },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", ""],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
  "pulseaudio": {
    "scroll-step": 1,
    "format": "{icon} {volume}%", 
    "format-bluetooth": "{volume}% {icon} {format_source}",   
    "format-muted": "\ueee8 {volume}%",
    "format-source-muted": "",
    "format-icons": {
      "default": ["\uf026", "\uf027", "\uf028"],
      "headphone": "",
    },
   // "states": {
    //  "warning": 0,
    //},
    "scroll-step": 1,
    "tooltip": false,
  },
  "backlight": {
    // "device": "acpi_video1",
    "format": "{icon} {percent}%",
    "format-icons": ["", "", "", "", "", "", "", "", ""]
  },
  "battery": {
    "interval": 10,
    "states": {
      "warning": 15,
      "critical": 5
    },
    "format": "{icon} {capacity}%",
    "format-icons": ["\udb80\udc7a", "\udb80\udc7b", "\udb80\udc7c", "\udb80\udc7d", "\udb80\udc7e", "\udb80\udc7f", "\udb80\udc80", "\udb80\udc81", "\udb80\udc82"],
    "format-full": "\udb80\udc7a {capacity}%",
    "format-charging": "\udb80\udc84 {capacity}%",
    "format-alt": "{time} {icon}",
    "tooltip":false
  },
  "idle_inhibitor": {
      "format": "{icon}",
      "format-icons": {
          "activated": "",
          "deactivated": ""
      }
  },
  "clock": {
    "interval": 1,
    "format": "{:%I:%M %p  %A %b %d}",
    "tooltip": true,
    "tooltip-format": "<tt>{calendar}</tt>",
  },
  "memory": {
    "interval": 1,
    "format": " {percentage}%",
    "states": {
      "warning": 85,
    },
  },
  "cpu": {
    "interval": 1,
    "format": "\uf4bc {usage}%",
    "tooltip": false
  },
  "mpd": {
    "max-length": 25,
    "format": "<span foreground='#bb9af7'></span> {title}",
    "format-paused": " {title}",
    "format-stopped":"<span foreground='#bb9af7'></span>",
    "format-disconnected": "",
    "on-click": "mpc --quiet toggle",
    "on-click-right": "mpc ls | mpc add",
    "on-click-middle": "kitty ncmpcpp",
    "on-scroll-up": "mpc --quiet prev",
    "on-scroll-down": "mpc --quiet next",
    "smooth-scrolling-threshold":5,
    "tooltip-format": "{title} - {artist} ({elapsedTime:%M:%S}/{totalTime:%H:%M:%S})"
  },
  "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": " {essid} ({signalStrength}%)",
        "format-ethernet": "{ipaddr}/{cidr} ",
        "tooltip-format": "{ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Disconnected ⚠",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
  "temperature": {
   // "hwmon-path": "/sys/class/thermal/thermal_zone7/temp",
    //"critical-threshold": 80,
    "tooltip": false,
    "format": "\uf2c9 {temperatureC}°C"
  },
  "bluetooth": {
    "format": "{status} {device_alias}",
    "format-disabled": " Off",
    "format-connected": " {device_alias}",
    "format-disconnected": " No Devices",
    "on-click": "~/.config/way
#
#  gjv ftyrtdjsehea\gsERWET5678JU-='[=
]
#[POIUYTRE2W31Q`2		r/bluetooth-menu.sh",
    "on-click-right": "bluetoothctl power off",
	"tooltip": true
  },
  "tray": {
    "icon-size": 15,
    "spacing": 5
  },
}
